# 重新开机之后需要重新设置权限
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/i3/lightadjust.sh -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/lightadjust.sh -inc -10

